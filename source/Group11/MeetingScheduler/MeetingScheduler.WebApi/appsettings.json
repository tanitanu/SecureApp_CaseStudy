{  
  "Serilog": {
    "Using": [],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ],
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "C:\\Logs\\MeetingScheduler\\LogApi_.log",
          "rollOnFileSizeLimit": true,
          "outputTemplate": "{Timestamp}{Message}{NewLine:1}{Exception:1}",
          "rollingInterval": "Day"
        }
      }
    ]

  },
  "AllowedHosts": "*"
}
