@* Menus created by JAYaseelan *@
@using BlazorCARS.HealthShield.Utility;
@inject IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>BlazorCARS - HealthShield</title>
    @* <link rel="icon" type="image/x-icon" href="favicon.ico" /> *@
    <link runat="server" rel="icon" href="~/Images/HealthShieldLogo.png" type="image/ico" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BlazorCARS.HealthShield.WebApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow mb-3" style="background-color:#08739C;">
            @* <div class="container"> *@
            @* <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top"> *@
            <div class="container-fluid">
                @* <a class="navbar-brand" asp-area="" asp-page="/Index">HealthShield</a> *@
                <a class="navbar-brand mt-2 mt-lg-0" href="#">
                    <h5 class="pt-1">Health Shield</h5>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        @if (HttpContextAccessor.HttpContext.Session.GetString(SessionData.Token) == null
                        || HttpContextAccessor.HttpContext.Session.GetString(SessionData.Token) == string.Empty)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-white" href="#" id="navbarRegistrationMenu" role="button"
                                   data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Registration
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarRegistrationMenu">
                                    <a class="dropdown-item" asp-area="" asp-page="/Hospital/HospitalRegistration">Hospital</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" asp-area="" asp-page="/User/UserRegistration">Recipient</a>
                                </div>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-page="/Login">Login</a>
                            </li>
                        }
                        @if (HttpContextAccessor.HttpContext.Session.GetString(SessionData.Token) != null
                        && HttpContextAccessor.HttpContext.Session.GetString(SessionData.Token).ToString().Length > 0)
                        {
                            if (HttpContextAccessor.HttpContext.Session.GetString(SessionData.UserRole).ToString().ToUpper() == "USER")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-page="/User/ViewProfile">Primary Profile</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-page="/User/DependantList">Dependant List</a>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-white" href="#" id="navbarUserMenu"
                                       data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Vaccine Registry
                                    </a>
                                    <div class="dropdown-menu" aria-labelledby="navbarUserMenu">
                                        <a class="dropdown-item" asp-area="" asp-page="/User/ActiveAppointments">Active Appoinment</a>
                                        <a class="dropdown-item" asp-area="" asp-page="">Fulfilled Appoinment</a>
                                        <a class="dropdown-item" asp-area="" asp-page="">Missed Appoinment</a>
                                    </div>
                                </li>
                            }
                            else if (HttpContextAccessor.HttpContext.Session.GetString(SessionData.UserRole).ToString().ToUpper() == "ADMIN")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-page="/Hospital/ViewHospital">Hospital Profile</a>
                                </li>
@*                                 <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-action="">Vaccine Schedule</a>
                                </li> *@
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-white" href="#" id="navbarAppoinmentMenu" role="button"
                                       data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Appoinment
                                    </a>
                                    <div class="dropdown-menu" aria-labelledby="navbarAppoinmentMenu">
                                        <a class="dropdown-item" asp-area="" asp-page="/HospitalAppointment/Active">Active Appoinment</a>
                                        <a class="dropdown-item" asp-area="" asp-page="">Fulfilled Appoinment</a>
                                        <a class="dropdown-item" asp-area="" asp-page="">Missed Appoinment</a>
                                    </div>
                                </li>
                            }
                            else if (HttpContextAccessor.HttpContext.Session.GetString(SessionData.UserRole).ToString().ToUpper() == "SADMIN")
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-white" href="#" id="navbarMasterMenu" role="button"
                                       data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Master
                                    </a>
                                    <div class="dropdown-menu" aria-labelledby="navbarMasterMenu">
                                        <a class="dropdown-item" asp-area="" asp-page="/UserRole/Index">User Role</a>
                                        <a class="dropdown-item" asp-area="" asp-page="">User Store</a>
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" asp-area="" asp-page="">Country</a>
                                        <a class="dropdown-item" asp-area="" asp-page="">State</a>
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" asp-area="" asp-page="/vaccine/List">Vaccine</a>
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" asp-area="" asp-page="">Inventory</a>
                                        <a class="dropdown-item" asp-area="" asp-page="">Load Inventory</a>
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" asp-area="" asp-page="">Vaccine Schedule</a>
                                        <a class="dropdown-item" asp-area="" asp-page="">Vaccine Registration</a>
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" asp-area="" asp-page="">Hospital</a>
                                        <a class="dropdown-item" asp-area="" asp-page="">Recipient</a>
                                    </div>
                                </li>
                            }
                            <li class="nav-item">
                                <a class="nav-link text-end text-white" asp-area="" asp-page="/Logout">Logout</a>
                            </li>
                            <li class="nav-item ms-auto">
                                <a class="nav-link text-white text-end">
                                    Welcome to @HttpContextAccessor.HttpContext.Session.GetString(SessionData.UserName).ToString().ToUpper()
                                </a>
                            </li>
                        }
                        @*                         <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="UserRole/Index">User Role</a>
                        </li> *@
                        @*                         @if (HttpContextAccessor.HttpContext.Session.GetString("UserName") != null)
                        {
                        <ul class="navbar-nav ms-auto d-flex">
                        <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="">Welcome, @HttpContextAccessor.HttpContext.Session.GetString("UserName")! </a>
                        </li>
                        <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Logout">Logout</a>
                        </li>
                        </ul>
                        } *@
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        @* <div class="container">
        &copy; 2023 - BlazorCARS - HealthShield - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div> *@
        <div class="text-center p-0 text-white" style="background-color:#26AAE2;">
            © Powered by BlazorCARS - 2023
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @* <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous"> *@
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>