                <div class="col-2">
                    <label class="control-label" asp-for="RecipientCreate.PostalCode"></label>
                </div>
                <div class="col-4">
                    <input class="form-control" asp-for="@Model.RecipientCreate.PostalCode" />
                    <span asp-validation-for="@Model.RecipientCreate.PostalCode" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="row pb-3">
                <div class="col-2 offset-8">
                    <button type="submit" class="form-control btn btn-primary" style="background-color:#08739C;" asp-page-handler="OnPostAsync"><i class="bi bi-floppy2-fill"></i>&nbsp;Save</button>
                </div>
                <div class="col-2">
                    <button type="reset" class="form-control btn btn-secondary" asp-page-handler="OnPostAsync"><i class="bi bi-arrow-clockwise"></i>&nbsp;Reset</button>
                </div>
