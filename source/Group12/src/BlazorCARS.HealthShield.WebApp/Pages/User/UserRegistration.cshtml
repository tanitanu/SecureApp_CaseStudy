                    </select>
                    <span asp-validation-for="@Model.RecipientCreate.CountryId" class="text-danger"></span>
                </div>
            </div>
            <div class="row pb-3">
                <div class="col-2">
                    <label class="control-label" asp-for="RecipientCreate.StateId"></label>
                </div>
                <div class="col-4">
                    <select asp-for="@Model.RecipientCreate.StateId" asp-items="@Model.StateOptions">
