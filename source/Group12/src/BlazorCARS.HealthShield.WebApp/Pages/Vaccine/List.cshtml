@page
@model BlazorCARS.HealthShield.WebApp.Pages.Vaccine.List
@{
    ViewData["Title"] = "Vaccines List";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">@ViewData["Title"]</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="AddVaccine" class="btn btn-primary"><i class="bi bi-person-plus-fill"></i>&nbsp;New Vaccine</a>
        </div>
    </div>
</div>
<br />
<br />
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>VaccineId</th>
            <th>Name</th>
            <th>Manufacturer</th>
            <th>AgeGroup</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.VaccineList)
        {
            <tr>
                <td>@item.VaccineId</td>
                <td>@item.Name</td>
                <td>@item.Manufacturer</td>
                <td>@item.AgeGroup</td>
                <td><a asp-page="Vacine/VaccineList" title="View"><i class="bi bi-binoculars-fill"></i></a></td>
                <td><a asp-page="Vaccine/VaccineList/@item.VaccineId" title="Edit"><i class="bi bi-pencil-fill"></i></a></td>
               
            </tr>
        }
    </tbody>
</table>
@* </div> *@
