@inherits LayoutComponentBase
@inject UserInfo uInfo

<PageTitle>Health Shield</PageTitle>

<div class="page">
    <div class="sidebar">
        <NavMenu userLevel=uLevel/>
    </div>

    <main>
        <div class="top-row px-4">                        
            <a href="login" @onclick="onLogout"><span class="oi oi-account-logout"></span> Logout</a>            
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code
{

    private int uLevel { get; set; }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if(firstRender)
        {
            uLevel = uInfo.UserLevel;
            StateHasChanged();
        }
    }

    private async Task onLogout()
    {
        uInfo = null;
    }
}
