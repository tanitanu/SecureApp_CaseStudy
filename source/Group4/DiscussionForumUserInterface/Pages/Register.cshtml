@page
@model DiscussionForumUserInterface.Pages.RegisterModel
@{
}
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
          crossorigin="anonymous" />
    <title>Register to ConvoVerse</title>
</head>
<partial name="_Notification" />
<body>
    <div class="container">
        <header>
            <h2 class="main-header">ConvoVerse</h2>
            <p class="header-description">
                Join the Conversation: Your Gateway to Knowledge, Networking, and
                Insights!
            </p>
        </header>
        <h3 class="text-center">Join ConvoVerse</h3>
        <div class="d-flex justify-content-center align-items-center container">
            <div class="row">
                <form method="post">
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    <div class="form-group required">
                        <label class="control-label">First Name</label>
                        <input type="text" class="form-control" asp-for="RegisterViewModel.Firstname" />
                        <span class="text-danger" asp-validation-for="RegisterViewModel.Firstname"></span>
                    </div>
                    <div class="form-group required">
                        <label class="control-label">E-mail</label>
                        <input type="text" class="form-control" asp-for="RegisterViewModel.Email" />
                        <span class="text-danger" asp-validation-for="RegisterViewModel.Email"></span>
                    </div>

                    <div class="form-group required">
                        <label class="control-label">Password</label>
                        <input type="password" class="form-control" asp-for="RegisterViewModel.Password" />
                        <span class="text-danger" asp-validation-for="RegisterViewModel.Password"></span>
                    </div>

                    <div class="form-group required">
                        <label class="control-label">Confirm Password</label>
                        <input type="password" class="form-control" asp-for="RegisterViewModel.ConfirmPassword" />
                        <span class="text-danger" asp-validation-for="RegisterViewModel.ConfirmPassword"></span>
                    </div>
                    <label>
                        <input type="checkbox" class="checkbox" required />
                        I have read and agree to the Terms of Service
                    </label>
                    <div class="form-group buttons">
                        <button type="submit" class="btn btn-success">Register</button>
                        <button type="button" class="btn btn-danger" onclick="window.location.href = 'Index'">Cancel</button>
                        <a asp-page="Login">Back To Login</a>
                    </div>
                </form>
            </div>
        </div>

        <p class="terms-head">
            Terms and Conditions for ConvoVerse Discussion Forum:
        </p>

        <ol>
            <li>Acceptance of Terms:</li>
            <p class="terms">
                By accessing and using ConvoVerse Discussion Forum, you agree to
                abide by these terms and conditions. If you do not agree with any
                of these terms, please refrain from using the Forum.
            </p>

            <li>User Conduct:</li>
            <p class="terms">
                Users are expected to engage in respectful and civil discourse.
            </p>
            <p class="terms">
                Do not post or promote any content that is defamatory,
                discriminatory, abusive, harassing, or otherwise violates the
                rights of others.
            </p>
            <p class="terms">
                Do not use the Forum for any illegal or unauthorized purpose.
            </p>

            <li>Registration and User Accounts:</li>
            <p class="terms">
                Users must provide accurate and complete information during
                registration.
            </p>
            <p class="terms">
                User accounts are for personal use only and may not be shared.
            </p>
            <p class="terms">
                Users are responsible for maintaining the confidentiality of their
                login credentials.
            </p>
        </ol>


    </div>
</body>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        if (@TempData["Success"] != null)
        {
            $('#registerViewModel_Firstname').val('');
            $('#registerViewModel_Email').val('');
        }
    });
</script>
