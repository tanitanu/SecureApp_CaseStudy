@page
@model DiscussionForumUserInterface.Pages.ResetPasswordModel
@{
}
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
          crossorigin="anonymous" />
    <title>ConvoVerse</title>
</head>
<partial name="_Notification" />
<body>
    <div class="container">
        <header>
            <h2 class="main-header">ConvoVerse</h2>
            <p class="header-description">
                Join the Conversation: Your Gateway to Knowledge, Networking, and
                Insights!
            </p>
        </header>
        <div class="d-flex justify-content-center align-items-center container">
            <div class="row">
                <form method="post">
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    <div class="form-group">
                        <label class="control-label">E-mail</label>
                        <input type="email"
                               class="form-control"
                               asp-for="ResetPasswordViewModel.Email"
                               readonly />
                    </div>

                    <div class="form-group required">
                        <label class="control-label">Password</label>
                        <input type="password"
                               class="form-control"
                               asp-for="ResetPasswordViewModel.Password"
                                />

                        <span class="text-danger" asp-validation-for="ResetPasswordViewModel.Password"></span>
                    </div>

                    <div class="form-group required">
                        <label class="control-label">Confirm Password</label>
                        <input type="password"
                               class="form-control"
                               asp-for="ResetPasswordViewModel.ConfirmPassword"
                                />

                        <span class="text-danger" asp-validation-for="ResetPasswordViewModel.ConfirmPassword"></span>
                    </div>
                    <div class="form-group buttons">
                        <button type="submit" class="btn btn-success">Reset Password</button>
                        <button type="submit" class="btn btn-danger" onclick="window.location.href = 'Login'">
                            Back To Login
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

