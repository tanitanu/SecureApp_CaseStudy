@page
@model DiscussionForumUserInterface.Pages.SecureLoginModel
@{
}
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
          crossorigin="anonymous" />
    <title>Login to ConvoVerse</title>
</head>
<partial name="_Notification" />
<body>
    <div class="container">
        <header>
            <h2 class="main-header">ConvoVerse</h2>
            <p class="header-description">
                Join the Conversation: Your Gateway to Knowledge, Networking, and
                Insights!
            </p>
        </header>
        <div class="d-flex justify-content-center align-items-center container">
            <div class="row">
                <form method="post">
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    <div class="form-group required">
                        <label class="control-label">Code</label>
                        <input type="text"
                               class="form-control"
                               asp-for="LoginViewModel.Code" />

                        <span class="text-danger" asp-validation-for="LoginViewModel.Code"></span>
                    </div>
                    <div class="form-group buttons">
                        <button type="submit" class="btn btn-success">Login</button>
                        <button type="submit" class="btn btn-outline-primary" asp-page-handler="Resend">
                            Resend OTP
                        </button>
                        <a asp-page="Login">Back To Login</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>



