@using DXC.BlogConnect.Utilities;
@using DXC.BlogConnect.WebApp.ServiceExtension;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DXC.BlogConnect.WebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DXC.BlogConnect.WebApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">

    <link href='https://cdn.jsdelivr.net/npm/froala-editor@latest/css/froala_editor.pkgd.min.css' rel='stylesheet' type='text/css' />
    <script type='text/javascript' src='https://cdn.jsdelivr.net/npm/froala-editor@latest/js/froala_editor.pkgd.min.js'></script>
    <link href="~/css/login.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">DXC.BlogConnect</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">Home</a>

                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/AboutUs">About Us</a>
                        </li>


                        @if (User.Identity.IsAuthenticated && User.Identity.GetRoles() == UserRole.ADMIN) 
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                                   aria-expanded="false" id="navbarDropdownAdmin">
                                    Admin
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdownAdmin">
                                    <li>
                                        <a class="dropdown-item" href="/admin/blogs/add">Add Blog Post</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="/admin/blogs/list">Blog Posts</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="/users/index">Users</a>
                                    </li>
                            </ul>
                            </li>
                        }
                        @if (User.Identity.IsAuthenticated)
                        {

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                               aria-expanded="false" id="navbarDropdownAdmin">
                                My Profile
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownAdmin">
                                <li>
                                    <a class="dropdown-item" href="/Users/Edit">Edit Profile</a>
                                </li>
                                <li>
                                        <a class="dropdown-item" href="/Users/ChangePassword">Change Password</a>
                                </li>
                                </ul>
                        </li>
                        }

                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Blogs/Add">User Blog Post</a>
                            </li>
                        }

                    </ul>
                    <div class="d-flex align-items-center">
                        @if(User.Identity.IsAuthenticated)
                        {
                            <div class="me-3 text-light">
                                @User.Identity.GetUserName()
                            </div>

                            <a href="/logout" class="btn bg-light text-dark me-3">Logout</a>
                        }
                        else
                        {
                            <a href="/login" class="btn bg-light text-dark me-3">Login</a>
                            <a href="/users/add" class="btn bg-light text-dark">Register</a>
                        
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - DXC.BlogConnect.WebApp - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>