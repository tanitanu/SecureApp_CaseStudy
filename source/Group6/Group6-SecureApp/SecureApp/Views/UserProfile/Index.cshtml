@model IEnumerable<SecureApp.Models.UserProfile>
@{
    ViewData["Title"] = "Index";
}
@{
    Layout = "_Layout";
}

<h1>User Profile</h1>

<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dob)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adhar)
            </th>

            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelitem => item.User.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dob)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Adhar)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" title="Edit"><i class="bi bi-pencil-square"></i></a> |
                    <a asp-action="Details" asp-route-id="@item.Id" title="Details"><i class="bi bi-list-ul"></i></a> |
                    @*<a asp-action="Delete" asp-route-id="@item.Id">Delete</a> |*@
                    <form asp-action="Delete" method="post" style="display:inline;">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@item.Id" />
                        <a href="#" onclick="this.closest('form').submit();" title="Delete"><i class="bi bi-trash"></i></a>
                    </form> |
                    <a asp-action="ChangePassword" asp-route-id="@item.Id" title="Change Password"><i class="bi bi-key"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
