@page
@model TechCo.Pages.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="row pt-3 mb-2">
    <div class="col-lg-6">
        <h3 class="mb-2 font-weight-bold text-info">@Model.Product.ProductPrice DA</h3>
        <h2>@Model.Product.ProductName</h2>
        <hr />
        <p>@Html.Raw(Model.Product.ProductDescription)</p>
    </div>
    <div class="col-lg-6">
        <img class="w-100" src="~/image/@Model.Product.Thumbnail" />
    </div>
</div>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Product.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
