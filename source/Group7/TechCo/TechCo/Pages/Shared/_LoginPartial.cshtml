@using Microsoft.AspNetCore.Identity
@inject SignInManager<TechCo.Models.ApplicationUser> SignInManager
@inject UserManager<TechCo.Models.ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        @if (User.IsInRole("Admin"))
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-page="/Admin/Index"><i class="fas fa-toolbox"></i></a>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a asp-page="/User/Orders" class="nav-link text-dark"><i class="fas fa-list"></i></a>
            </li>
            <li class="nav-item">
                <a asp-page="/Cart" class="nav-link text-dark"><i class="fas fa-shopping-cart"></i></a>
            </li>
        }
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><i class="fas fa-user"></i></a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
